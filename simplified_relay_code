// C++ code
//

void setup()
{
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);
}


//delay for the high should be a variable, dependent on the required dosage

void loop()
{

  digitalWrite(12, HIGH);
  delay(13000); // Wait for 13000 millisecond(s). This represents a set dosage value.
  digitalWrite(12, LOW);
  delay(43000); // Wait for 500 millisecond(s). This is idle time.
}
